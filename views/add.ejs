<div class="row" ng-controller="IdeaCtrl">
    <div class="panel col-md-12">
        <h2><span class="label label-default hidden-print">Add New Idea</span></h2>
        <br>
        <div class="col-md-12">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="email" class="col-md-2 control-label">Email</label>
                    <div class="col-md-10">
                        <input type="email" class="form-control" id="email" placeholder="Email" ng-model="newIdea.email"/>
                    </div>
                </div>
                <div class="form-group">
                    <label  for="title" class="col-md-2 control-label">Title</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="title" placeholder="Title" ng-model="newIdea.title">
                    </div>
                </div>
                <div class="form-group">
                    <label  for="department" class="col-md-2 control-label">Department</label>
                    <div class="col-md-10">
                        <!--<input type="text" class="form-control" id="department" placeholder="Department">-->
                        <select class="form-control" id="department" ng-model="newIdea.department">
                            <option>Arrak Campus</option>
                            <option>Business Office</option>
                            <option>CLLC</option>
                            <option>Climate</option>
                            <option>Energy</option>
                            <option>Land Grant</option>
                            <option>Liberal Arts</option>
                            <option>Library</option>
                            <option>Nuclear</option>
                            <option>Sea Grant</option>
                            <option>STEM</option>
                            <option>Student Services</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label  for="sector" class="col-md-2 control-label">Sector</label>
                    <div class="col-md-10">
                        <select class="form-control" id="sector" ng-model="newIdea.sector">
                            <option>Agriculture</option>
                            <option>Aquaculture</option>
                            <option>Dev. Ed</option>
                            <option>Finance</option>
                            <option>Health</option>
                            <option>STEM</option>
                            <option>Student Services</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label  for="crosscutting" class="col-md-2 control-label">CrossCutting</label>
                    <div class="col-md-10">
                        <select multiple ng-model="newIdea.subSector" ng-options="parseInt(o.value) as o.name for o in options"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label  for="idea" class="col-md-2 control-label">Idea</label>
                    <div class="col-md-10">
                        <textarea type="text" class="form-control" id="idea" ng-model="newIdea.idea"
                                  placeholder="What need are you responding to?">Idea</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label  for="outcomes" class="col-md-2 control-label">Outcomes</label>
                    <div class="col-md-10">
                        <textarea type="text" class="form-control" id="outcomes" ng-model="newIdea.outcomes"
                                  placeholder="Describe a desired outcome">Outcomes</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label  for="projectDescription" class="col-md-2 control-label">Project Description</label>
                    <div class="col-md-10">
                        <textarea type="text" class="form-control" id="projectDescription" ng-model="newIdea.projectDesc"
                                  placeholder="How are you going to do it?">Project Description</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label  for="estBudget" class="col-md-2 control-label">Estimated Budget</label>
                    <div class="col-md-10">
                        <input type="number" class="form-control" id="estBudget" placeholder="Estimated Budget" ng-model="newIdea.estimatedBudget"/>
                    </div>
                </div>
                <div class="form-group">
                    <label  for="evaluation" class="col-md-2 control-label">Evaluation</label>
                    <div class="col-md-10">
                        <textarea type="text" class="form-control" id="evaluation" ng-model="newIdea.evaluation"
                                  placeholder="How will you know when and to what extent you have succeeded?">Evaluation</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" ng-click="save()">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>

