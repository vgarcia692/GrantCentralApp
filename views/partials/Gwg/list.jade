div(class='panel')
    h2
        span(class='label label-default') {{gwgs.length}} Total Approved Ideas
    div(class='well') Search
        input(type='text', ng-model='search.title')
        table(class='table table-hover')
            thead
                th #
                th Title
                th Amount
                th Beneficiary
                th Approved Date
            tbody
                tr(ng-repeat='gwg in gwgs | filter: search')
                    td {{ $index +1 }}
                    td
                        a(href='/view3/{{gwg.id}}') {{ gwg.title }}
                    td {{ gwgw.amount | currency }}
                    td {{ gwg.beneficiary }}
                    td {{ gwgw.approvedDate | date }}

