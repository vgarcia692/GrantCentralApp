<div class="panel">
    <h2>
        <span class="label label-default">{{gwgs.length }} Total Approved Ideas</span>
    </h2>
    <div class="well">
        Search: <input type="text" ng-model="search.title"/>
        <br>
        <table class="table table-hover">
            <thead>
                <th>#</th>
                <th>Title</th>
                <th>Approved Date</th>
            </thead>
            <tbody>
                <tr ng-repeat="gwg in gwgs | filter: search">
                    <td> {{ $index + 1 }}</td>
                    <td>
                        <a href="/view3/{{gwg.id}}">{{gwg.title}}</a>
                    </td>
                    <td>{{ gwg.approvedAt  | date }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>