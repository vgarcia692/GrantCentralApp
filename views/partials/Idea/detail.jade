div(class='panel')

    div
        h2
            span(class='label label-default') {{ idea.title }}
        h5 Created: {{ idea.createdAt | date }}
        button(class='btn btn-primary', ng-show='!idea.approved') Approve

        br

        h4
            label(class='label label-success', ng-show='idea.approved') Approved

    br

    div
        div(class='well')
            h4 Beneficiary:
                span(class='label label-default')
                |  {{ idea.beneficiary }}
            h4 Amount:
                span(class='label label-default')
                |  {{ idea.amount | currency }}